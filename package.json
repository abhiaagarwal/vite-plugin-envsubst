{
    "name": "vite-plugin-envsubst",
    "version": "0.2.0",
    "description": "Vite plugin that transforms environmental variables into a global statement that can be replaced with `envsubst` or Caddy's templating engine.",
    "author": "Abhi Agarwal <abhiaagarwal01@gmail.com> (https://abhi.rodeo)",
    "license": "(MIT OR Apache-2.0)",
    "homepage": "https://github.com/abhiaagarwal/vite-plugin-envsubst",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/abhiaagarwal/vite-plugin-envsubst.git"
    },
    "bugs": {
        "url": "https://github.com/abhiaagarwal/vite-plugin-envsubst/issues"
    },
    "keywords": [
        "vite-plugin",
        "docker",
        "kubernetes"
    ],
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.cjs",
            "import": "./dist/index.mjs"
        }
    },
    "scripts": {
        "build": "tsc && unbuild"
    },
    "peerDependencies": {
        "vite": "*"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@types/bun": "^1.1.14",
        "@types/node": "^22.10.2",
        "eslint": "^9.17.0",
        "prettier": "^3.4.2",
        "typescript": "~5.6.3",
        "typescript-eslint": "^8.18.1",
        "unbuild": "^3.0.1"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "always"
    }
}
